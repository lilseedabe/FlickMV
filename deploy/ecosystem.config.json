{
  "name": "FlickMV Production Apps",
  "apps": [
    {
      "name": "flickmv-api",
      "cwd": "/var/www/flickmv/server",
      "script": "index.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5001
      },
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "error_file": "/var/www/flickmv/logs/pm2-error.log",
      "out_file": "/var/www/flickmv/logs/pm2-out.log",
      "log_file": "/var/www/flickmv/logs/pm2-combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}