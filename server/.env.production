# ===========================
# FlickMV Production Environment
# ðŸš¨ KEEP THIS FILE SECRET - NEVER COMMIT TO GIT
# ===========================

# Server Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-domain.com
WS_PUBLIC_URL=wss://your-domain.com

# Security Keys (MUST BE STRONG RANDOM VALUES)
INTERNAL_API_KEY=CHANGE-ME-TO-RANDOM-64-CHAR-STRING
JWT_SECRET=CHANGE-ME-TO-RANDOM-64-CHAR-STRING
JWT_EXPIRES_IN=7d

# ===========================
# Production Supabase (SEPARATE PROJECT)
# ===========================
DATABASE_URL=postgresql://postgres:PROD-PASSWORD@db.PROD-PROJECT-ID.supabase.co:5432/postgres
SUPABASE_POSTGRES_URL=postgresql://postgres:PROD-PASSWORD@db.PROD-PROJECT-ID.supabase.co:5432/postgres
SUPABASE_URL=https://PROD-PROJECT-ID.supabase.co
SUPABASE_SERVICE_ROLE_KEY=PROD-SECRET-KEY

# Queue Settings
PGBOSS_SCHEMA=pgboss
EXPORT_QUEUE_NAME=video-export

# ===========================
# Cloud Storage (REQUIRED FOR PRODUCTION)
# ===========================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-production-access-key
R2_SECRET_ACCESS_KEY=your-production-secret-key
R2_BUCKET=flickmv-production-exports
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_BASE_URL=https://cdn.your-domain.com

# ===========================
# Production Security
# ===========================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://your-domain.com

# ===========================
# Production Monitoring
# ===========================
LOG_LEVEL=warn
LOG_FILE=/var/log/flickmv/app.log
ERROR_REPORTING=true