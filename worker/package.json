{
  "name": "flickmv-worker",
  "version": "1.2.0",
  "description": "On-demand Docker worker for FlickMV (FFmpeg export via pg-boss, reports to internal API)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "author": "FlickMV Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.620.0",
    "@aws-sdk/lib-storage": "^3.620.0",
    "fluent-ffmpeg": "^2.1.2",
    "pg-boss": "^9.0.3",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "uuid": "^9.0.1",
    "sharp": "^0.33.2",
    "tmp": "^0.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}